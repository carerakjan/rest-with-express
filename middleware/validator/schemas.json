{
  "newUser": {
    "type": "object",
    "description": "User Registration",
    "properties": {
      "login": {
        "title": "Username",
        "type": "string",
        "format": "email"
      },
      "password": {
        "title": "Password",
        "inputType": "password",
        "type": "string"
      }
    },
    "required": ["login", "password"]
  },
  "editUser": {
    "type": "object",
    "description": "Update User Info",
    "properties": {
      "firsName":{
        "title": "First name",
        "type": "string"
      },
      "lastName":{
        "title": "Last name",
        "type": "string"
      },
      "phoneNumber":{
        "title": "Phone number",
        "type": "string"
      }
    }
  },
  "authUser": {
    "type": "object",
    "description": "Authentication",
    "properties": {
      "login": {
        "title": "Username",
        "type": "string",
        "format": "email"
      },
      "password": {
        "title": "Password",
        "inputType": "password",
        "type": "string"
      }
    },
    "required": ["login", "password"]
  },
  "forgotPassword": {
    "type": "object",
    "description": "Forgot Password",
    "properties": {
      "login": {
        "title": "Username",
        "type": "string",
        "format": "email"
      }
    },
    "required": ["login"]
  },
  "auth": {
    "type": "object",
    "properties": {
      "login": {
        "type":"string",
        "format": "email"
      },
      "password": { "type": "string" },
      "isRoot": { "type": "boolean" }
    },
    "required": ["login", "password"]
  },
  "categories": {
    "type": "object",
    "properties": {
      "name": { "type":"string" },
      "type": { "enum": [1, 2] },
      "items": {
        "type": "array",
        "minItems": 1,
        "uniqueItems": true,
        "items": {
          "type": "string"
        }
      }
    },
    "required": ["name", "type"]
  },
  "optimizeImages": {
    "type": "object",
    "description": "Optimization of images set",
    "properties": {
      "taskName": {
        "enum": ["small", "large", "huge"]
      },
      "ids": {
        "type": "array",
        "minItems": 1,
        "uniqueItems": true,
        "items": {
          "type": "string",
          "description": "Image ID"
        }
      }
    },
    "required": ["taskName", "ids"]
  },
  "optimizeOneImage": {
    "type": "object",
    "description": "Image Optimization",
    "properties": {
      "taskName": {
        "enum": ["small", "large", "huge"]
      }
    },
    "required": ["taskName"]
  },
  "stringItems":{
    "type": "array",
    "minItems": 1,
    "uniqueItems": true,
    "items": {
      "type": "string"
    }
  },
  "addFiles": {
    "type": "object",
    "properties": {
      "files": {
        "type": "array",
        "items": {
          "type": "object",
          "properties":{
            "name": {"type":"string"},
            "path": {"type":"string"},
            "size": {"type":"number"},
            "type": {"type":"string"}
          },
          "required": ["name", "path", "size", "type"]
        }
      }
    },
    "required": ["files"]
  }
}